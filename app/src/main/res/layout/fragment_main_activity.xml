<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.example.dylan.intentoefening.fragments.MainActivityFragment"
              android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:text="@string/push_to_talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSpeek"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/txvOutput"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:text="@string/http"
        android:id="@+id/etWebURL"/>

    <Button
        android:text="@string/go_to_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnWeb"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvContact"/>

    <Button
        android:text="@string/contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnContacts"/>

    <Button
        android:text="@string/dialer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDialer"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etGoogle"/>

    <Button
        android:text="@string/search_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGoogle"/>

</LinearLayout>
